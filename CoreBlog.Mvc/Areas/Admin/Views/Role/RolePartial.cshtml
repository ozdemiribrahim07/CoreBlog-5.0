@model CoreBlog.Entities.Dtos.UserRoleDto
<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span class="fas fa-edit"></span> @Model.Username Rol Düzenleniyor...</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="İptal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Assign" id="roleassign">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none;"></div>
                    <input type="hidden" asp-for="Userid" />
                    
                    <div class="form-row">

                        @for (int i = 0; i < Model.RoleDto.Count; i++)
                        {
                           <div class="form-group col-md-12">
                               <div class="form-check">
                                   <input type="checkbox" class="form-check-input" asp-for="@Model.RoleDto[i].Has " />
                                   <label asp-for="@Model.RoleDto[i].Roleid">@Model.RoleDto[i].RoleName</label>
                                   <input type="hidden" asp-for="@Model.RoleDto[i].Roleid" />
                                   <input type="hidden" asp-for="@Model.RoleDto[i].RoleName" />


                               </div>

                           </div>
                        }

                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-block" data-dismiss="modal"><span class="fas fa-times"></span> İptal</button>
                <button type="button" class="btn btn-primary btn-block" id="btnUpdate"><span class="fas fa-save"></span> Kaydet</button>
            </div>
        </div>
    </div>
</div>
