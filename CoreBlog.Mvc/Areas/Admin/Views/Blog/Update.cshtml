@model CoreBlog.Mvc.Areas.Admin.Models.BlogUpdateModel

@{

    Layout = "_Layout";

}


<form asp-controller="Blog" asp-action="Update" method="post" enctype="multipart/form-data">

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <input type="hidden" asp-for="userid"/>
                    <input type="hidden" asp-for="Id"/>

                    <div class="form-group">
                        <input type="text" id="blogtitle" class="form-control" placeholder="Blog Başlık" asp-for="BlogTitle" />
                        <span asp-validation-for="BlogTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <textarea id="editor" asp-for="BlogContent"></textarea>
                        <span asp-validation-for="BlogContent" class="text-danger"></span>

                    </div>

                </div>

            </div>

        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    Ayarlar

                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="categorylist" asp-for="CategoryId">Kategoriler</label>
                        <select id="categorylist" class="form-control" asp-for="CategoryId"
                                asp-items="@(new SelectList(Model.Categories, "Id", "CategoryName"))">
                            <option disabled="disabled">Lütfen bir kategori seçiniz...</option>
                            <option></option>




                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>


                    </div>
                    <div class="form-group">
                        <label for="dateselect" asp-for="Date"></label>
                        <input type="text" id="dateselect" class="form-control" asp-for="Date" value="@DateTime.Now.ToShortDateString()" />
                        <span asp-validation-for="Date" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <label for="blogupload" asp-for="Image"></label>
                        <input type="hidden" id="blogupload"  class="form-control-file" asp-for="Image" />
                        <img class="my-image" src="~/img/@Model.Image"/>
                        <span asp-validation-for="Image" class="text-danger"></span>
                        

                    </div>

                    <div class="form-group">
                        <label for="blogupload" asp-for="BlogImageFile"></label>
                        <input type="file" id="blogupload" accept="image/*" class="form-control-file" asp-for="BlogImageFile" />
                        <span asp-validation-for="BlogImageFile" class="text-danger"></span>

                    </div>
                    <div class="form-check">
                        <input type="checkbox" id="isActive" class="form-check-input" asp-for="isActive" />
                        <label for="isActive" class="form-check-label" asp-for="isActive">Aktif ?</label>
                        <span asp-validation-for="isActive" class="text-danger"></span>


                    </div>
                    <br />
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block">Kaydet</button>
                    </div>
                </div>

            </div>


        </div>
    </div>


</form>

