
@model CoreBlog.Entities.Dtos.UserUpdateDto

@{ 

    Layout = "_Layout";

}

<br />
<br />
<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="card mt-3">
            <div class="card-header">
                <h4 class="text-center">Profili Güncelle</h4>
            </div>
            <div class="card-body">
                <form asp-action="UserChangeDetails" id="userupdate" enctype="multipart/form-data" method="post" asp-controller="User">

                    <div asp-validation-summary="All" class="text-danger" id="validation"  style="display:none"></div>
                    <input asp-for="Id" type="hidden" />

                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input class="form-control" asp-for="Username" />
                        <span class="text-danger" asp-validation-for="Username"></span>

                    </div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input type="email" class="form-control" asp-for="Email" />
                        <span class="text-danger" asp-validation-for="Email"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Picture"></label><br />
                        <img src="~/img/@Model.Picture" class="my-image" asp-for="Picture" />

                    </div>



                    <div class="form-group">
                        <label asp-for="PictureFile"></label>
                        <input type="file" class="form-control" asp-for="PictureFile" accept="userimages/*" />
                        <span class="text-danger" asp-validation-for="PictureFile"></span>

                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                        <a class="btn btn-danger" asp-area="Admin" asp-controller="Home" asp-action="Index">İptal Et</a>
                    </div>



                </form>

            </div>
        </div>

    </div>

</div>
