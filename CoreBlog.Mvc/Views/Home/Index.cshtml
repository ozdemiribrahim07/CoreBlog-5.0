@model CoreBlog.Entities.Dtos.BlogListDto

@{
    Layout = "HomeLayout";

}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Blog Gönderileri</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">


                <div class="row">
                    @foreach (var item in Model.Blogs)
                    {


                        <div class="col-lg-4 card">
                            
                                <img src="~/img/@item.BlogImage" class="card-img-top img-fluid" alt="">
                            
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i> @item.DateCreated
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i> @item.CommentCount
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-eye"></i> @item.ViewCount
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                    <a href="single.html">@item.BlogTitle</a>
                                </h5>
                                <p class="card-text mb-3">@item.BlogContent.Substring(0,item.BlogContent.Substring(0,120).LastIndexOf(" ")).. </p>
                                <a asp-controller="Blog" asp-action="HomeDetail" asp-route-blogid="@item.Id" class="btn btn-primary read-m">Devamını Oku</a>
                            </div>
                        </div>
                    }
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-left mt-4">

                            @{
                                
                                @for (int i = 1; i <= Model.TotalPage; i++)
                                {

                                    <li class="page-item @(i == Model.Current ? "active" : "")">
                                        <a class="page-link" asp-route-current="@i" >@i</a>
                                    </li>


                                }

                            }


                        </ul>
                    </nav>
                </div>

                <!--//left-->
            </div>
        </div>
    </div>
</section>