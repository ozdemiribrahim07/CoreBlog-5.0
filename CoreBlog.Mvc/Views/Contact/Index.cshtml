@model CoreBlog.Entities.Dtos.ContactSendDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<link href="~/HomeLay/css/bootstrap.css" rel='stylesheet' type='text/css' />
<link href="~/HomeLay/css/contact.css" rel='stylesheet' type='text/css' />
<link href="~/HomeLay/css/style.css" rel='stylesheet' type='text/css' />
<link href="~/HomeLay/css/fontawesome-all.css" rel="stylesheet">
<link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
      rel="stylesheet">

<section class="main-content-w3layouts-agileits">

    <h3 class="tittle">İletişim</h3>
    <p class="sub text-center">BİZİMLE İLETİŞİM KUR !</p>
    <div class="contact-map inner-sec">

       <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d48117.77684357557!2d28.943764432786757!3d41.08295729573424!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab6ea321836e1%3A0xbf71b4bd7c23d138!2zS8OixJ_EsXRoYW5lL8Swc3RhbmJ1bA!5e0!3m2!1str!2str!4v1653399169043!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                
    </div>
    <div class="ad-inf-sec bg-light">
        <div class="container">
            <div class="address row">

                <div class="col-lg-4 address-grid">
                    <div class="row address-info">
                        <div class="col-md-4 address-left text-center">
                            <i class="far fa-map"></i>
                        </div>
                        <div class="col-md-8 address-right text-left">
                            <h6>Adres</h6>
                            <p>
                                İstanbul, Türkiye

                            </p>
                        </div>
                    </div>

                </div>
                <div class="col-lg-4 address-grid">
                    <div class="row address-info">
                        <div class="col-md-4 address-left text-center">
                            <i class="far fa-envelope"></i>
                        </div>
                        <div class="col-md-8 address-right text-left">
                            <h6>Email</h6>
                            <p>
                              
                                <a href="ozdemiribrahim07"> ozdemiribrahim07@gmail.com</a>

                            </p>
                        </div>

                    </div>
                </div>
                <div class="col-lg-4 address-grid">
                    <div class="row address-info">
                        <div class="col-md-4 address-left text-center">
                            <i class="fas fa-mobile-alt"></i>
                        </div>
                        <div class="col-md-8 address-right text-left">
                            <h6>Telefon</h6>
                            <p>+90 507 035 6010</p>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="contact_grid_right">
            <form asp-controller="Contact" asp-action="Index" method="post">
                <div class="row contact_left_grid">
                    <div class="col-md-6 con-left">
                        <div class="form-group">
                            <label for="validationCustom01 my-2">Ad</label>
                            <input class="form-control" type="text"  placeholder="Adınız.." asp-for="Name" required="">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Email</label>
                            <input class="form-control" type="email"  placeholder="Mail adresi giriniz.." asp-for="Mail" required="">
                        </div>
                        <div class="form-group">
                            <label for="validationCustom03 my-2">Konu</label>
                            <input class="form-control" type="text"  placeholder="Konu başlığı giriniz.." asp-for="SubjectDesc" required="">
                        </div>
                    </div>
                    <div class="col-md-6 con-right">
                        <div class="form-group">
                            <label for="textarea">Mesaj</label>
                            <textarea id="textarea" placeholder="" asp-for="Message">Mesaj yazınız..</textarea>
                        </div>
                        <button class="form-control" type="submit" >Gönder</button>

                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<script src="~/HomeLay/js/bootstrap.js"></script>

